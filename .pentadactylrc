" use the best leader
map <Space> <Leader>

" open help in new tab
set newtab+=help

" easier navigation
nmap -b J <C-d>
nmap -b K <C-u>
nmap -b H gT
nmap -b L gt

nmap -b <C-o> H
nmap -b <C-i> L

" only show the tab bar if there are more than one tab
set showtabline=multitab

" find as you type
set incfind
" highlight the terms
set hlfind
" unless they contain upper-case letters
set findcase=smart

" use listed characters to enumerate quickhint elements
" set hintkeys=hjklasdfgyuiopqwertnmzxcvb
" display hints in uppercase
" highlight -a Hint text-transform: uppercase;

" shortcut for accessing subreddits
cmap /r/ -builtin reddit.com/r/
